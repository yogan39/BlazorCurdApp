
@page "/Employee"
@using BlazorCurdApp.Data
@inject EmployeeService objEmpServive


<NavLink class="nav-link" href="AddEmployee">
    <span class="oi oi-plus" aria-hidden="true"></span> AddNew
</NavLink>

<h1>Empoyee Informaiton</h1>
@if(objEmp==null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th> Employee ID</th>
                <th> Name</th>
                <th> Gender</th>
                <th> City</th>
                <th> Email</th>
                <th> Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var emp in objEmp)
            {
            <tr>
                <td>@emp.EmployeeID</td>
                <td>@emp.Name</td>
                <td>@emp.EmployeeID</td>
                <td>@emp.Gender</td>
                <td>@emp.City</td>
                <td>@emp.Email</td>
                <td>
                    <a class="nav-link" href="EditEmployee/@emp.EmployeeID">
                        <span class="oi oi-pencil" aria-hidden="true"></span> Edit
                    </a>
                    <a class="nav-link" href="DeleteEmployee/@emp.EmployeeID">
                        <span class="oi oi-trash" aria-hidden="true"></span> Delete
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}
@code {
    List<Employinfo> objEmp;
    protected override async Task OnInitializedAsync()
    {
        objEmp = await Task.Run(() => objEmpServive.GetEmployinfos());
    }
}
